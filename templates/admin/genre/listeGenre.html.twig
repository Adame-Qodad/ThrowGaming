{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Gestion Genres {% endblock %}

{# 
    liste simple des genres
#}

{% block body %}
    {# wrapper de la liste #}
    <h1>Gestion des genres</h1>
    <a class="p-1 my-2 bg-green-500 text-white rounded" href="{{ path('app_admin_genre_ajout') }}">
        Ajouter
    </a>
    <div class="grid grid-cols-2 gap-x-10 gap-y-2 pt-2">
        {% for genre in genres %}
            <div class = "flex flex-row justify-between gap-2 border border-gray-300 rounded p-3">
                <span class="inline grow">
                    <svg height="32" width="32" class="fill-{{genre.couleur}}-500">
                        <rect x="0" y="0" width="100%" height="100%" rx="5px" />
                    </svg>
                    <span class="font-bold">{{ genre.libelle }}</span>
                </span>
                <span>
                    <a class="bg-gray-300 rounded p-1 hover:bg-gray-200" href="{{path("app_admin_genre_edit", {'id': genre.id })}}">Modifier</a>
                    <a class="bg-gray-300 rounded p-1 hover:bg-gray-200" href="{{path("app_admin_genre_suppr", {'id': genre.id })}}">Supprimer</a>
                </span>
            </div>            
        {% endfor %}
    </div>
{% endblock %}
