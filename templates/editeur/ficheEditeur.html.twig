{% extends 'base.html.twig' %}

{% block title %}Fiche Editeur{% endblock %}

{% block body %}

<h1 class="text-3xl mb-5">Fiche de l'éditeur</h1>
<div class="rounded-md shadow-lg overflow-hidden border border-gray-600/25">
	<div class="p-5 flex flex-col gap-5 items-center">
		<img src="https://i.ytimg.com/vi/_DHq_NxEq8Q/maxresdefault.jpg"
		class="rounded-md shadow-md sm:w-[320px] lg:w-[640px] text-center"
		draggable="false"
		/>
		<div class="w-full">
			<h1 class="text-2xl font-black">{{ leEditeur.nom }}</h1>
			<hr class="my-4">
			<h3 class="font-bold text-md text-gray-600" style="font-variant: small-caps;">Description</h3>
			<p class="text-justify leading-relaxed">
				Lorem ipsum dolor sit amet consectetur adipisicing, elit. Repellendus, itaque. Totam veniam atque asperiores distinctio, enim repellat explicabo fugiat, laboriosam, deserunt quas impedit illo? Eos dolorum aliquid voluptatum dignissimos ipsa?
			</p>
            <hr class="my-4">
            

	</div>
    
    <div class="relative overflow-x-auto w-full">
    <table class="w-full text-sm text-left rtl:text-right text-black-500 dark:text-dark-400">
        <thead class="text-xs text-gray-700 uppercase bg-gray-50 light:bg-gray-700 dark:text-black-400">
            <tr>
                <th scope="col" class="px-6 py-3">
                    Jeu
                </th>
                <th scope="col" class="px-6 py-3">
                    Date
                </th>
                <th scope="col" class="px-6 py-3">
                    Prix
                </th>
            </tr>
        </thead>
        <tbody>
        {% for jeu in leEditeur.jeux %}
            <tr class="bg-dark border-b white:bg-gray-800 dark:border-dark-700">
                <th scope="row" class="px-6 py-4 font-medium text-dark-900 whitespace-nowrap dark:text-dark">
                    <a href="{{ path('app_ficheJeu', {'id': jeu.id}) }}">{{jeu.titre}}</a>
                </th>
                <td class="px-6 py-4">
                    {{jeu.date }}
                </td>
                <td class="px-6 py-4">
                    {{jeu.prix}}€
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

    
    
</div>

{% endblock %}
