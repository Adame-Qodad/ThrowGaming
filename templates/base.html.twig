{% set utilisateur = app.user %}
{% set navbc = 'p-2 rounded border border-slate-300' %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ThrowGaming{% endblock %}</title>
        <link rel="icon" href="https://avatars.githubusercontent.com/Cyb-3r">
        <script src="https://cdn.tailwindcss.com"></script>
        <link rel="stylesheet" href="https://horizon-tailwind-react-git-tailwind-components-horizon-ui.vercel.app/static/css/main.ad49aa9b.css" />
        {% block stylesheets %}{% endblock %}
    </head>

    <body class="m-0 flex flex-col gap-y-5 w-[100vw] h-[100vh]">
       <header class="flex flex-row w-full h-[4rem] items-center px-10 border-b border-gray-400 shrink-0">
            {# titre #}
            <h1 class="text-2xl font-black uppercase tracking-wide"><a href="{{path('app_accueil')}}">ThrowGaming</a></h1>
            <nav class="flex flex-row gap-x-10 grow">
                {# pages #}
                <div class="grow">
                    <a class="text-gray-500 ml-5 hover:text-blue-600" href="{{path('app_jeu')}}">catalogue de jeu</a>
                    <a class="text-gray-500 ml-5 hover:text-blue-600" href="{{path('app_console')}}">consoles</a>
                    <a class="text-gray-500 ml-5 hover:text-blue-600" href="{{path('app_editeur')}}">editeur</a>
                </div>
                {# login #}
                <div class="flex gap-3 justify-right">
                {% if utilisateur != null %}
                    <a class="text-gray-500" href="{{path('app_login')}}"><i class="fa-solid fa-cart-shopping fa-xl"></i></a>
                    <a class="text-gray-500" href="{{path('app_register')}}"><i class="fa-solid fa-user fa-xl"></i></a>
                    <a class="text-gray-500" href="{{path('app_logout')}}"><i class="fa-solid fa-right-from-bracket fa-xl"></i></a>
                {% else %}
                    <a href="{{path('app_login')}}">Se connecter</a> /
                    <a href="{{path('app_register')}}">S'inscrire</a>
                {% endif %}
                </div>
            </nav>
        </header>

        <main class="container mx-auto px-10">
            {% block body %}{% endblock %}
        </main>

        <footer class="px-4">
            
        </footer>
    </body>
    {% block javascripts %}{% endblock %}
    <script src="https://kit.fontawesome.com/c79be7434a.js" crossorigin="anonymous"></script>
</html>
